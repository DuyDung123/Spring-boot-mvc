<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">

	<!-- upline dao diện web -->
    <decorator name="web" page="web.jsp">
       <pattern>/*</pattern> <!-- khi mà resquest vào url /trang chu thì trỏ tới web.jsp  ở forder /decorators-->
    </decorator>
    
    <decorator name="admin" page="admin.jsp">
       <pattern>/quan-tri*</pattern> <!--  tương tự như trang chủ -->
    </decorator>
    
    <decorator name="login" page="login.jsp">
        <pattern>/dang-nhap</pattern>
    </decorator>
<!-- nhớ khai báo taglib.jsp ở forder common nó là thư viện chung cho decorators -->
</decorators>
